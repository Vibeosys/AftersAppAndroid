<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:padding="14dp"
                android:layout_margin="14dp"
                android:src="@drawable/after_purple" />
<LinearLayout
    android:layout_width="190dp"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="horizontal">
    <Button
        android:id="@+id/purchase"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="28dp"
        android:background="@color/colorAccent"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="4dp"
        android:text="@string/str_remove_ads"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>


            <com.aftersapp.views.RobotoBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:padding="4dp"
                android:text="@string/str_purchase_msg"
                android:textColor="@color/secondaryText"
                android:textSize="18sp" />
        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancelProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="28dp"
                android:layout_marginTop="28dp"
                android:background="@color/colorPrimary"
                android:paddingBottom="6dp"
                android:paddingLeft="38dp"
                android:paddingRight="38dp"
                android:paddingTop="6dp"
                android:text="KEEP ADS"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
