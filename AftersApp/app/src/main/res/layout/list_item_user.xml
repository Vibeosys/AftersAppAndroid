<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_avatar2_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="16dp"
        android:src="@drawable/shape_circle"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/user_avatar_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingLeft="23dp"
        android:paddingTop="26dp"
        android:src="@drawable/ic_action_timer_auto"
        tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <com.aftersapp.views.RobotoTextView
            android:id="@+id/user_name_text_item_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/str_name"
            android:singleLine="true"
            android:textColor="@color/primaryText"
            android:textSize="16sp" />

        <com.aftersapp.views.RobotoTextView
            android:id="@+id/full_name_text_item_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/full_name"
            android:singleLine="true"
            android:textColor="@color/secondaryText"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
